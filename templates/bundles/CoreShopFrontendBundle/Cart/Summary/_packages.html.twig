{% import "@CoreShopFrontend/Common/Macro/currency.html.twig" as currency %}

{% for package in cart.packages %}
    <h1>{{ package.key }} ({{ package.id }})</h1>
    <p>
        {% if package.warehouse %}
            Supplier: {{ package.warehouse.supplier.name }}<br/>
            Supplier Warehouse {{ package.warehouse.identifier }}<br/>
        {% endif %}

        {% if package.carrier %}
            <br/>
            Carrier: {{ package.carrier.title }}
            Subtotal (Package Price): {{ currency.convertAndFormat(package.subtotal) }}<br/>
            Shipping (Package): {{ currency.convertAndFormat(package.shipping(true)) }} (Net: {{ currency.convertAndFormat(package.shipping(false)) }})<br/>
            Shipping Days: {{ package.shippingTime }}<br/>
        {% endif %}

        {{ package.shippingTime }}
        {{ package.shippingDate }}
    </p>

    Items: <br/>
    {% for item in package.items %}
        {{ item.orderItem.product.name }} - Qty: {{ item.quantity }} - Total: {{ currency.convertAndFormat(item.total) }}<br/>
    {% endfor %}
{% endfor %}
